{
  "name": "vcdrom",
  "displayName": "VCDrom",
  "description": "VCD viewer for VS Code",
  "version": "0.2.6",
  "license": "MIT",
  "publisher": "drom",
  "author": "WaveDrom",
  "homepage": "https://github.com/wavedrom/vscode-vcdrom#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavedrom/vscode-vcdrom.git"
  },
  "bugs": {
    "url": "https://github.com/wavedrom/vscode-vcdrom/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:vcdrom.start",
    "onLanguage:vcd"
  ],
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "vcdrom.start",
          "when": "resourceLangId == vcd",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "vcd",
        "extensions": [
          ".vcd"
        ]
      }
    ],
    "commands": [
      {
        "command": "vcdrom.start",
        "title": "Open VCDrom Preview"
      }
    ]
  },
  "files.associations": {
    "*.vcd": "vcd"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
